<main>
  <h1 class="title title--primary"><%= title %></h1>
  <table>
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Remove Ban</th>
      </tr>
    </thead>
    <% if (!bannedUsers.length) { %>
      <tbody>
        <tr>
          <td colspan="3">Ban list is empty.</td>  
        </tr>
      </tbody>
    <% } else { %>
      <tbody>
        <% bannedUsers.forEach((user) => { %>
          <tr>
            <td>
              <a href="/profile/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a>
            </td>
            <td>
              <form 
                action="/club/<%= clubId %>/control-panel/ban-list/remove/?userId=<%= user.id %>" 
                method="post"
                onsubmit="return confirm('Are you sure you want to remove this user from club\'s ban list?')"
              >
                <button type="submit">Remove</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    <% }; %>
  </table>
</main>
